<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/orange4"
                android:endColor="@color/orange4"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/orange6" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/orange6"
                android:startColor="@color/orange6"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/orange6" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="20dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>